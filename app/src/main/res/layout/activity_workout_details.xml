<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WORKOUT.WorkoutDetailsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:text="Back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/workoutDetails_back_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/workoutDetails_addExercise_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/button_style"
        android:text="Add Exercise" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout name"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/workoutDetails_back_btn"
        android:id="@+id/workoutDetails_name_textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/workoutDetails_name_textView"
        android:id="@+id/workoutDetails_exercises_count_textView"
        android:text="Exercises count"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/workoutDetails_name_textView"
        android:id="@+id/workoutDetails_workout_estimated_time"
        android:text="Estimated Time"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercises_in_workoutDetails_recView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workoutDetails_exercises_count_textView"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp" />


</RelativeLayout>